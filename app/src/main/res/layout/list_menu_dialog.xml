<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="12dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_menu_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name the Audio Clip"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginLeft="24dp"
            android:layout_gravity="center"
            android:id="@+id/list_menu_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_cancel" />


    </LinearLayout>




    <View
        android:id="@+id/list_menu_div"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="#50333333" />


    <LinearLayout
        android:id="@+id/list_menu_delete_ll"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/list_menu_delete_btn"
            android:layout_gravity="center"
            android:layout_width="36dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/ic_delete_black_24dp" />

        <TextView
            android:id="@+id/list_menu_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:text="Delete Clip"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/list_menu_share_ll"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/list_menu_share_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_share_black_24dp" />


        <TextView
            android:id="@+id/list_menu_share_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_gravity="center"
            android:text="Share Clip"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"/>

    </LinearLayout>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/menu_adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4730800757487119/3808060565" />


</LinearLayout>