            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#ffffff"/>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/pl_prev_btn"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/back_unpressed"
                app:layout_constraintEnd_toStartOf="@+id/pl_playback_btn"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/pl_stop_rec_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="72dp"
                android:src="@drawable/stop_unpressed"
                app:layout_constraintEnd_toEndOf="@+id/pl_playback_btn"
                app:layout_constraintTop_toTopOf="@+id/pl_playback_btn" />

            <ImageView
                android:id="@+id/pl_playback_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/play_unpressed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
